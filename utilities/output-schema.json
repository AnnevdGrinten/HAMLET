{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema of the output from the HAMLET pipeline",
  "definitions": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "genes_of_interest",
        "pipeline_version",
        "run_name",
        "sample_name"
      ],
      "properties": {
        "genes_of_interest": {
          "type": "array",
          "items": { "$ref": "#/definitions/gene_of_interest" }
        },
        "pipeline_version": { "type": "string" },
        "run_name": { "type": "string" },
        "sample_name": { "type": "string" }
      }
    },
    "gene_of_interest": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "gene_id", "gene_symbol", "transcript_ids" ],
      "properties": {
        "gene_id": { "type": "string" },
        "gene_symbol": { "type": "string" },
        "transcript_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "results": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "expr", "fusion", "itd", "var" ],
      "properties": {
        "expr": { "type": "array" },
        "fusion": { "type": "object" },
        "itd": { "type": "object" },
        "var": { "type": "object" }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "metadata",
    "results",
    "stats"
  ],
  "type": "object",
  "properties": {
    "metadata": { "$ref": "#/definitions/metadata" },
    "results": { "$ref": "#definitions/results" },
    "stats": { "type": "object" }
  }
}
