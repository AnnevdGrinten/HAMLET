{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema of the output from the HAMLET pipeline",
  "definitions": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "genes_of_interest",
        "pipeline_version",
        "run_name",
        "sample_name"
      ],
      "properties": {
        "genes_of_interest": {
          "type": "array"
        },
        "pipeline_version": {
          "type": "string"
        },
        "run_name": {
          "type": "string"
        },
        "sample_name": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "metadata",
    "results",
    "stats"
  ],
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "results": {
      "type": "object"
    },
    "stats": {
      "type": "object"
    }
  }
}
