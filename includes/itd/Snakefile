include: "../qc-seq/Snakefile"

rule all_itd:
    input:
        kmt2a_csv=expand(RUN.output("{sample}/itd/{sample}.kmt2a.csv"), sample=RUN.samples),
        kmt2a_bg_csv=expand(RUN.output("{sample}/itd/{sample}.kmt2a.bg.csv"), sample=RUN.samples),
        kmt2a_plots=expand(RUN.output("{sample}/itd/{sample}.kmt2a.png"), sample=RUN.samples),
        flt3_csv=expand(RUN.output("{sample}/itd/{sample}.flt3.csv"), sample=RUN.samples),
        flt3_bg_csv=expand(RUN.output("{sample}/itd/{sample}.flt3.bg.csv"), sample=RUN.samples),
        flt3_plots=expand(RUN.output("{sample}/itd/{sample}.flt3.png"), sample=RUN.samples),
